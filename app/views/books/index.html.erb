<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/user_info', user: @user %>

      <%= render partial: 'new_book', locals: { book: Book.new } %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to image_tag(book.user.profile_image, size: "100x100", class: "profile-image"), user_path(book.user) %>
                <% else %>
                  <%= link_to image_tag("default-image.jpg", size: "100x100", class: "profile_image"), user_path(book.user) %>
                <% end %>
               </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>