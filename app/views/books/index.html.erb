<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>

      <%= render partial: 'new_book', locals: { book: Book.new } %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.profile_image, size: "100x100" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>