<div class="container">
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>error prohibited this obj from being saved: </h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/user_info', user: @user %>

      <%= render partial: 'new_book', locals: { book: @book } %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to image_tag(book.user.profile_image, size: "100x100", class: "profile-image"), user_path(book.user) %>
                <% else %>
                  <%= link_to image_tag("default-image.jpg", size: "100x100", class: "profile_image"), user_path(book.user) %>
                <% end %>
               </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>