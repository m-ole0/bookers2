<div class="container">
  <div class="row">
    <div>
    <h2>Editing Book</h2>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @book do |f| %>
      <div>Title</div>
        <%= f.text_field :title %>
      <div>Opinion</div>
        <%= f.text_area :body %>
      <div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
      </div>
    <div>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>

    </div>
  </div>
</div>