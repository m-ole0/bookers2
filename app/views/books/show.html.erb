<div class="row">
  <div class="col-md-3">

<h2>User info</h2>

<div>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "100x100", class: "profile-image" %>
  <% else %>
    <%= image_tag "default-image.jpg", size: "100x100", class: "profile_image" %>
  <% end %>
</div>

<div>
  <%= link_to edit_user_path(@user.id), class: "btn btn-secondary" do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<div>
  <strong>name</strong> <%= @user.name %>
</div>
<div>
  <strong>introduction</strong><%= @user.introduction.present? ? @user.introduction : "" %>
</div>


<%= render partial: 'new_book', locals: { book: Book.new } %>

</div>

<div class="col-md-8">
  <h2>Book detail</h2>
  <div class="table">
    <tbody>
      <tr>
        <td><%= image_tag @book.user.profile_image, size: "100x100", class: "profile-image" %></td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" }, class: "btn btn-danger" %></td>
      </tr>
    </tbody>
    <div><%= link_to @book.user.name, user_path(@book.user) %></div>
  </div>
</div>