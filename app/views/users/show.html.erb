<div class="row">
  <div class="col-md-3">
    <%= render 'user_info', user: @user %>


    <h2>New Book</h2>
      <%= form_with model: Book.new, url: books_path do |f| %>

        <div>Title</div>
      <%= f.text_field :title %>

        <div>Opinion</div>
      <%= f.text_area :body %>

        <div>
      <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>

      <% end %>
  </div>

<div class="col-md-8">
  <h2>Books</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.profile_image, size:"100x100", class: "profile_image" %></td>
          <td><%= link_to  book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>